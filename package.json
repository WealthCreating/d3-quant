{
    "version": "0.3.0",
    "name": "d3-quant",
    "description": "D3 library for quantitative analytics",
    "homepage": "https://github.com/quantmind/d3-quant",
    "repository": {
        "type": "git",
        "url": "https://github.com/quantmind/d3-quant.git"
    },
    "keywords": [
        "d3",
        "math"
    ],
    "license": "BSD-3-Clause",
    "author": {
        "name": "Luca Sbardella",
        "url": "http://lucasbardella.com"
    },
    "main": "dist/d3-quant.js",
    "jsnext:main": "index",
    "dependencies": {
        "d3-let": "0.2",
        "d3-array": "1.0",
        "d3-collection": "1.0",
        "d3-random": "1.0"
    },
    "devDependencies": {
        "babelify": "7.3",
        "babel-preset-es2015-rollup": "1.2",
        "babel-tape-runner": "2.0",
        "browserify": "13.1",
        "covert": "1.1",
        "crossfilter": "1.3",
        "eslint": "3.5",
        "faucet": "0.0",
        "package-preamble": "0.0",
        "rollup": "0.36",
        "rollup-plugin-babel": "2.6",
        "rollup-plugin-json": "2.0",
        "tape": "4.6",
        "uglify-js": "2.7"
    },
    "scripts": {
        "pretest": "rm -rf dist && mkdir dist && rollup -c --banner \"$(preamble)\"",
        "test": "eslint index.js src test && babel-tape-runner `find test -name '*-test.js'` | faucet",
        "prepublish": "npm run test && uglifyjs --preamble \"$(preamble)\" dist/d3-quant.js -c -m -o dist/d3-quant.min.js",
        "postpublish": "VERSION=`node -e 'console.log(require(\"./package.json\").version)'`; git push && git tag -am \"Release $VERSION.\" v${VERSION} && git push --tags && zip -j dist/d3-quant.zip -- LICENSE README.md dist/d3-quant.js dist/d3-quant.min.js"
    },
    "babel": {
        "presets": ["es2015"]
    }
}
